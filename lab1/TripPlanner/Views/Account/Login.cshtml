<form method="post">
    <div>
    <label>Username:</label>
    <input type="text" name="username" required />
    </div>
    <br>
    <div>
    <label>Password:</label>
    <input type="password" name="password" required />
    <button type="submit">Login</button>
    </div>
</form>

@if (ViewBag.Error != null)
{
    <p>@ViewBag.Error</p>
}